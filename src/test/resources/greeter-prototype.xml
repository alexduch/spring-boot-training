<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.github.alexduch.springboottraining.boot.GreetingConfigFactoryBean" id="template"/>

    <bean class="com.github.alexduch.springboottraining.boot.ConfigurableGreetingProvider" scope="prototype">
        <constructor-arg ref="template"/>
    </bean>

    <bean class="com.github.alexduch.springboottraining.spring.Greeter"/>

</beans>